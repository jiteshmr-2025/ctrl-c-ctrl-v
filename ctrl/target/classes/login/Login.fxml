<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="rootPane" prefHeight="500.0" prefWidth="400.0" styleClass="main-background" stylesheets="@login.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="registration.LoginController">
   <children>
      <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="350.0" prefWidth="300.0" spacing="15.0" styleClass="card-pane">
         <children>
            <Label text="Journal Login" textFill="#333333">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Label>
            
            <VBox alignment="CENTER_LEFT" spacing="5.0">
               <children>
                  <Label styleClass="field-label" text="EMAIL" />
                  <TextField fx:id="emailField" promptText="example@email.com" styleClass="input-field" />
               </children>
            </VBox>
            
            <VBox alignment="CENTER_LEFT" spacing="5.0">
               <children>
                  <Label styleClass="field-label" text="PASSWORD" />
                  <PasswordField fx:id="passwordField" promptText="••••••••" styleClass="input-field" />
               </children>
            </VBox>
            
            <Label fx:id="errorLabel" text="Invalid credentials" textFill="#e63946" visible="false" />
            
            <Button fx:id="loginButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleLogin" styleClass="primary-button" text="Sign In">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
            
            <Hyperlink onAction="#switchToRegister" text="Don't have an account? Register" textFill="#666666" />
         </children>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
      </VBox>
   </children>
</StackPane>