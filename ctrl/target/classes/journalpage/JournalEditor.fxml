<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<StackPane fx:id="rootPane" prefHeight="700" prefWidth="1000"
           xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="journalpage.JournalController">

    <stylesheets>
        <URL value="@../styles.css" />
    </stylesheets>

    <ImageView fx:id="backgroundImage" preserveRatio="false" smooth="true" />

    <BorderPane>
        
        <top>
            <HBox alignment="CENTER" spacing="15" styleClass="horizon-strip">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <Button text="Mon 08" styleClass="date-pill"/>
                <Button text="Tue 09" styleClass="date-pill"/>
                <Button text="Today" styleClass="date-pill, date-pill-active"/> <Button text="Thu 11" styleClass="date-pill"/>
                <Button text="Fri 12" styleClass="date-pill"/>
            </HBox>
        </top>

        <center>
            <VBox alignment="CENTER">
                <VBox maxWidth="700" maxHeight="500" styleClass="glass-editor">
                    <padding>
                        <Insets top="40" right="40" bottom="40" left="40"/>
                    </padding>

                    <HBox alignment="CENTER_LEFT" spacing="15">
                        <VBox>
                            <Label fx:id="displayDateLabel" text="Wednesday, Dec 10" styleClass="editor-date"/>
                            <Label fx:id="weatherLabel" text="23°C • Raining in Kuala Lumpur" styleClass="editor-weather"/>
                        </VBox>
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="moodLabel" text="Mood: Calm" styleClass="editor-mood"/>
                    </HBox>

                    <Separator opacity="0.3" style="-fx-padding: 20 0 20 0;" />

                    <TextArea fx:id="journalTextArea" 
                              wrapText="true" 
                              promptText="What's on your mind today?" 
                              VBox.vgrow="ALWAYS"
                              styleClass="glass-text-area"/>
                </VBox>
            </VBox>
        </center>

        <bottom>
            <HBox alignment="CENTER" spacing="20">
                <padding>
                    <Insets bottom="30" />
                </padding>
                <Button text="Back" onAction="#handleClose" styleClass="action-button-secondary"/>
                <Button text="Save Entry" onAction="#handleSave" styleClass="action-button-primary"/>
            </HBox>
        </bottom>

    </BorderPane>

</StackPane>